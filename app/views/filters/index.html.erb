<div class="container">
  <div class="row-fluid">
    <%= render "filter_nav" %>
  </div>
</div>
<div class="container">
  <div clas="row-fluid">
    <%= render partial: "posts/post", collection: @posts %>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <ul class="pager">
        <li class="previous"><%= link_to_previous_page @posts, "previous" %></li>
        <li class="next"><%= link_to_next_page @posts, "next" %></li>
      </ul>
      <p class="lead"><%= page_entries_info @posts %></p>
    </div>
  </div>
</div>
